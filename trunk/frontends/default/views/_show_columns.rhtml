<dl>
<% columns.each do |column| %>
  <% if column.is_a? ActiveScaffold::DataStructures::ActionColumns -%>
    <dt><%= column.name -%></dt>
    <dd>
      <%= render :partial => 'show_columns' %>
    </dd>
  <% else -%>
    <dt><%= column.label -%></dt>
    <dd><%= render_column(@record, column) -%></dd>
  <% end -%>
<% end -%>
</dl>